@model List<BlogProject.Domain.ViewModels.ShowQuestionsList>
@{
    ViewData["Title"] = "";
}

<p>
    <a asp-action="CreateQuestion" asp-controller="Question" asp-route-articleId="@ViewBag.ArticleId">پرسش سوال</a>
</p>

@if (!Model.Any())
{
    <h4 class="alert alert-warning">موردی یافت نشد</h4>
}
else
{
    foreach (var item in Model)
    {
        <div class="card mt-2 col-3">
            <div class="card-body">
                <p>@item.Title</p>

                <p>@item.DateCreated</p>
            </div>
            <div class="card-footer">
                <a asp-action="ShowArticleDetail" asp-controller="Article" asp-route-id="@item.Id" class="btn btn-secondary">جزئیات</a>
            </div>
        </div>
    }
}
