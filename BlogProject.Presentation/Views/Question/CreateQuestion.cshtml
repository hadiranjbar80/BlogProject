@model BlogProject.Domain.ViewModels.CreateQuestionViewModel
@{
    ViewData["Title"] = "پرسی سوال";
}

<div class="tagsec">
    <div style="width:100%;">
        <form asp-action="CreateQuestion">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            @Html.HiddenFor(q=>q.ArticleId)
            <div class="form-group">
                <label style="font-size:16px;" asp-for="Title" class="control-label"></label>
                <input style="font-family:var(--font-vazirmatn);" placeholder="عنوان را وارد کنید" asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label style="font-size:16px;" asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control ckeditor" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ثبت" class="more-button create-ques-btn" />
            </div>
        </form>

    </div>
</div>


@section Scripts {
    @{
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.all.min.js"></script>
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


