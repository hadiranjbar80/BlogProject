@model BlogProject.Domain.ViewModels.AddOrEditRoleViewModel
@{
    ViewData["Title"] = "نقش جدید";
}


<h1>افزودن نقش</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-border-radius waves-effect">
                    <i class="material-icons">save</i>
                    <span>ثبت</span>
                </button>
            </div>
        </form>
    </div>
</div>

<div class="pt-3">
    <a asp-action="Index" class="btn btn-outline-default btn-circle waves-effect waves-circle waves-float"><i class="material-icons">keyboard_backspace</i></a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
