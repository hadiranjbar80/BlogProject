@model List<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "‌مدیریت نقش‌ها";
}

<p>
    <a asp-action="AddRole" class="btn btn-info btn-border-radius waves-effect">نقش جدید</a>
</p>

@if (!Model.Any())
{
    <h4 class="alert alert-warning">موردی یافت نشد</h4>
}
else
{

    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        لیست نقش‌ها
                    </h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="#" onclick="return false;" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li>
                                    <a href="#" onclick="return false;">اقدام</a>
                                </li>
                                <li>
                                    <a href="#" onclick="return false;">اقدامی دیگر</a>
                                </li>
                                <li>
                                    <a href="#" onclick="return false;">چیز دیگری اینجا</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="body table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>عنوان نقش</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td>@Model[i].Name</td>
                                    <td>
                                        <form asp-action="DeleteRole" asp-route-id="@Model[i].Id" method="post">
                                            <a class="btn btn-outline-warning btn-circle waves-effect waves-circle waves-float"
                                               asp-controller="ManageRoles" asp-action="EditRole" asp-route-id="@Model[i].Id"><i class="material-icons">create</i></a>

                                            <button type="submit" class="btn btn-outline-danger btn-circle waves-effect waves-circle waves-float"><i class="material-icons">delete_forever</i></button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}

